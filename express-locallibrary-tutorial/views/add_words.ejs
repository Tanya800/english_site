<%- include('partials/head.html')%>
<%- include('partials/header.html')%>
<body>

<div class="container">
    <h1>Добавить слова в тест</h1>
    <form action="postWord" method="POST">
        <input name="test_id" type="text" class="form-control" value="<%=test_id%>" aria-describedby="emailHelp" readonly>
